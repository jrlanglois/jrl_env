{
    "useLinuxCommon": true,
    "apt":
    [
        "cinnamon-desktop-environment",
        "nemo"
    ],
    "snap":
    [
        "steam",
        "obs-studio"
    ],
    "flatpak":
    [
    ],
    "shell":
    {
        "ohMyZshTheme": "agnoster"
    },
    "commands":
    {
        "preInstall":
        [
            {
                "name": "aptUpdate",
                "runOnce": false,
                "shell": "bash",
                "command": "sudo apt update"
            }
        ],
        "postInstall":
        [
            {
                "name": "aptUpgrade",
                "runOnce": false,
                "shell": "bash",
                "command": "sudo apt upgrade -y"
            }
        ]
    },
    "cruft":
    {
        "apt":
        [
            "libreoffice*",
            "thunderbird*",
            "rhythmbox*",
            "transmission*",
            "totem*",
            "hexchat*"
        ]
    }
}
