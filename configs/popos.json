{
    "useLinuxCommon": true,
    "apt":
    [
        "nvidia-driver-535",
        "nvidia-settings"
    ],
    "snap":
    [
        "steam",
        "obs-studio"
    ],
    "flatpak":
    [
    ],
    "shell":
    {
        "ohMyZshTheme": "agnoster"
    },
    "commands":
    {
        "preInstall":
        [
            {
                "name": "aptUpdate",
                "runOnce": false,
                "shell": "bash",
                "command": "sudo apt update"
            }
        ],
        "postInstall":
        [
            {
                "name": "aptUpgrade",
                "runOnce": false,
                "shell": "bash",
                "command": "sudo apt upgrade -y"
            }
        ]
    },
    "cruft":
    {
        "apt":
        [
            "libreoffice*",
            "thunderbird*",
            "gnome-mahjongg",
            "gnome-mines",
            "gnome-sudoku",
            "aisleriot"
        ]
    }
}
