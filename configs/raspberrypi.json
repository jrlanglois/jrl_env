{
    "linuxCommon": true,
    "apt":
    [
        "python3-venv"
    ],
    "snap":
    [
        "code"
    ],
    "shell":
    {
        "ohMyZshTheme": "agnoster"
    },
    "commands":
    {
        "preInstall":
        [
            {
                "name": "aptUpdate",
                "runOnce": false,
                "shell": "bash",
                "command": "sudo apt update"
            }
        ],
        "postInstall":
        [
            {
                "name": "aptUpgrade",
                "runOnce": false,
                "shell": "bash",
                "command": "sudo apt upgrade -y"
            }
        ]
    },
    "cruft":
    [
        "libreoffice*",
        "chromium*",
        "thunderbird*",
        "rhythmbox*",
        "gnome-mahjongg",
        "gnome-mines",
        "gnome-sudoku",
        "aisleriot",
        "transmission*",
        "totem*"
    ]
}
