{
    "useLinuxCommon": true,
    "apt":
    [
        "docker-compose",
        "docker.io",
        "ladspa-sdk",
        "libglu1-mesa-dev",
        "libjack-jackd2-dev",
        "libwebkit2gtk-4.1-dev",
        "libx11-dev",
        "libxcomposite-dev",
        "libxcursor-dev",
        "libxext-dev",
        "libxinerama-dev",
        "libxml2-dev",
        "libxmlsec1-dev",
        "libxrandr-dev",
        "libxrender-dev",
        "mesa-common-dev",
        "postgresql",
        "redis-server"
    ],
    "snap":
    [
        "code",
        "slack",
        "spotify",
        "discord",
        "postman",
        "vlc",
        "steam",
        "obs-studio"
    ],
    "shell":
    {
        "ohMyZshTheme": "agnoster"
    },
    "commands":
    {
        "preInstall":
        [
            {
                "name": "aptUpdate",
                "runOnce": false,
                "shell": "bash",
                "command": "sudo apt update"
            }
        ],
        "postInstall":
        [
            {
                "name": "aptUpgrade",
                "runOnce": false,
                "shell": "bash",
                "command": "sudo apt upgrade -y"
            }
        ]
    },
    "cruft":
    [
        "libreoffice*",
        "chromium*",
        "thunderbird*",
        "rhythmbox*",
        "gnome-mahjongg",
        "gnome-mines",
        "gnome-sudoku",
        "aisleriot",
        "transmission*",
        "totem*"
    ]
}
