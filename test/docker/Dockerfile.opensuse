# OpenSUSE test environment for jrl_env
# Simulates a fresh OpenSUSE installation with ONLY git
FROM opensuse/leap:15.6

# Set timezone
ENV TZ=America/Montreal


# Install ONLY git (jrl_env/setup.sh should handle Python installation)
RUN zypper refresh && \
    zypper install -y \
    timezone \
    git \
    sudo \
    curl \
    && zypper clean --all

# Create test user (non-root)
RUN useradd -m -s /bin/bash testuser && \
    echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

USER testuser

# Add ~/.local/bin to PATH for pip --user installations
ENV PATH="/home/testuser/.local/bin:${PATH}"
WORKDIR /home/testuser

# Copy jrl_env
COPY --chown=testuser:testuser . /home/testuser/jrl_env

WORKDIR /home/testuser/jrl_env

CMD ["/bin/bash"]
